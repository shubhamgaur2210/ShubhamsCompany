@model IEnumerable<ShubhamsCompany.Models.ViewModels.UserViewModel>

@{
    ViewData["Title"] = "Roles";
}

<h1>Users List</h1>

<p>
    <a class ="btn btn-success" asp-action="Add">Add New User</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.User.EmpCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role.RoleName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department.DepartmentName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItme => item.User.EmpCode)
            </td>
            <td>
                @Html.DisplayFor(modelItme => item.User.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItme => item.Role.RoleName)
            </td>
            <td>
                @Html.DisplayFor(modelItme => item.Department.DepartmentName)
            </td>
            <td>
                    @Html.ActionLink("Details", "Details", new { id = item.User.UserID }, new { @class = "btn btn-warning" }) |
                    @Html.ActionLink("Update", "Update", new { id = item.User.UserID }, new { @class = "btn btn-primary" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.User.UserID }, new { @class = "btn btn-danger" })
            </td>
        </tr>
}
    </tbody>
</table>
